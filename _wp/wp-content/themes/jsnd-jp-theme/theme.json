{
  "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "primary",
          "name": "Primary",
          "color": "#20a647"
        },
        {
          "slug": "secondary",
          "name": "Secondary",
          "color": "#033824"
        },
        {
          "slug": "tertiary",
          "name": "Tertiary",
          "color": "#54c734"
        },
        {
          "slug": "orange",
          "name": "Orange",
          "color": "#ffb900"
        },
        {
          "slug": "red",
          "name": "Red",
          "color": "#e5121f"
        },
        {
          "slug": "gray",
          "name": "Gray",
          "color": "#5a5a5a"
        },
        {
          "slug": "text-color",
          "name": "Text Color",
          "color": "#5a5a5a"
        },
        {
          "slug": "text-color-orange",
          "name": "Text Color Orange",
          "color": "#f48700"
        },
        {
          "slug": "border-color",
          "name": "Border Color",
          "color": "#e0e0e0"
        },
        {
          "slug": "border-color-2",
          "name": "Border Color 2",
          "color": "#d9d9d9"
        },
        {
          "slug": "bg-light-gray",
          "name": "Background Light Gray",
          "color": "#fafafa"
        },
        {
          "slug": "bg-light-green",
          "name": "Background Light Green",
          "color": "#e8f6ec"
        }
      ],
      "gradients": [],
      "defaultGradients": false
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingScale": {
        "unit": "rem",
        "steps": [0, 0.25, 0.5, 1, 1.5, 2, 3, 4]
      },
      "spacingSizes": [
        {
          "slug": "s",
          "name": "S",
          "size": "1rem"
        },
        {
          "slug": "m",
          "name": "M",
          "size": "1.5rem"
        },
        {
          "slug": "base",
          "name": "基本",
          "size": "2rem"
        },
        {
          "slug": "l",
          "name": "L",
          "size": "3rem"
        },
        {
          "slug": "xl",
          "name": "XL",
          "size": "4rem"
        }
      ],
      "units": ["px", "rem", "em", "vw", "vh"]
    },
    "typography": {
      "dropCap": false,
      "defaultFontSizes": false,
      "fontWeight": true,
      "fontFamilies": [
        {
          "slug": "sans",
          "name": "Sans Serif",
          "fontFamily": "\"Noto Sans JP\", system-ui, -apple-system, BlinkMacSystemFont, \"Hiragino Sans\", \"Hiragino Kaku Gothic ProN\", \"Yu Gothic UI\", \"YuGothic\", Meiryo, sans-serif"
        },
        {
          "slug": "serif",
          "name": "Serif",
          "fontFamily": "\"Noto Serif JP\", serif"
        },
        {
          "slug": "webfont",
          "name": "Poppins",
          "fontFamily": "\"Poppins\", sans-serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "xs",
          "name": "XS",
          "size": "0.75rem"
        },
        {
          "slug": "sm",
          "name": "S",
          "size": "0.875rem"
        },
        {
          "slug": "base",
          "name": "基本",
          "size": "1.0625rem"
        },
        {
          "slug": "lg",
          "name": "L",
          "size": "1.25rem"
        },
        {
          "slug": "xl",
          "name": "XL",
          "size": "1.5rem"
        },
        {
          "slug": "xl",
          "name": "XXL",
          "size": "1.75rem"
        }
      ],
      "lineHeight": {
        "min": 1,
        "max": 1.9,
        "step": 0.1
      }
    },
    "blocks": {
      "core/button": {
        "spacing": {
          "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "typography": {
          "fontSizes": [
            {
              "slug": "button",
              "name": "Button",
              "size": "0.875rem"
            }
          ]
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        }
      },
      "core/paragraph": {
        "typography": {
          "fontSize": "1.7rem",
          "lineHeight": "1.7"
        }
      },
      "core/heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif)",
          "fontWeight": "600"
        }
      },
      "core/spacer": {
        "spacing": {
          "defaultSpacingSizes": false,
          "customSpacingSize": false,
          "spacingSizes": [
            {
              "slug": "s",
              "name": "S",
              "size": "1rem"
            },
            {
              "slug": "m",
              "name": "M",
              "size": "1.5rem"
            },
            {
              "slug": "base",
              "name": "基本",
              "size": "2rem"
            },
            {
              "slug": "l",
              "name": "L",
              "size": "3rem"
            },
            {
              "slug": "xl",
              "name": "XL",
              "size": "4rem"
            }
          ]
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "#FFFFFF",
      "text": "var(--wp--preset--color--text-color)"
    },
    "elements": {
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--text-color)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        }
      }
    },
    "blocks": {
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        }
      },
      "core/spacer": {
        "spacing": {
          "height": "var:preset|spacing|base"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--sans)",
      "fontSize": "1rem"
    }
  }
}
